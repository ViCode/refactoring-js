{% extends "../../../common/views/layout.parent.twig" %}

{% block head %}
  <title>{{title}}</title>
  <meta name="description" content="{{desc}}">
{% endblock %}

{% block content %}
  <ul class="listing">
    {% for product in products %}
      <li>
        <div class="card">
          <figure>
            <img class="card-img-top" src="/{{ product.image }}" alt="{{ product.image }}"/>
            <figcaption>{{ product.name }}</figcaption>
          </figure>
          <div class="card-body">
            <span>
              <h1 class="card-title">{{ product.name }}</h1>
            </span>
            <h6 class="card-text">{{ product.description }}</h6>
            <a class="btn btn-primary" href="/products/view/{{ product.id }}" title="View more">
              <button>
                {{buttonViewMore}}
              </button>
            </a>
          </div>
        </div>
      </li>
    {% endfor %}
  </ul>
{% endblock %}
