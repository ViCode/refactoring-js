{% extends "../../../common/views/layout.parent.twig" %}

{% block head %}
  <title>{{title}}</title>
  <meta name="description" content="{{desc}}">
{% endblock %}

{% block content %}
  <div class="row">
    <div class="col-4">
      <figure>
        <img class="card-img-top" src="/{{ product.image }}" alt="{{ product.image }}"/>
        <figcaption>{{ product.name }}</figcaption>
      </figure>
    </div>
    <div class="col-8">
      <p>{{ product.description }}</p>
      <p>Stock level:
        {{ product.stock }}</p>
      <a class="btn btn-primary" href="/products/cart/{{ product.id }}">{{buttonBuy}}</a>
    </div>
  </div>
{% endblock %}
